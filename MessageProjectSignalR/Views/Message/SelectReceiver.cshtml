@{
    ViewData["Title"] = "Select Receiver";
}

<h1>Alıcı ID'sini Seçin</h1>

<form asp-action="SelectReceiver" method="post">
    <div class="form-group">
        <label for="receiverId">Alıcı ID:</label>
        <input type="number" id="receiverId" name="receiverId" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Mesaj Gönder</button>
</form>

